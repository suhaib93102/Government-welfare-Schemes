# Django Settings
SECRET_KEY=your-django-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# API Keys
BING_SEARCH_API_KEY=your-bing-api-key
SERP_API_KEY=your-serp-api-key
YOUTUBE_API_KEY=your-youtube-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_VISION_API_KEY=your-google-vision-key

# Database (optional - uses SQLite by default)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8003/api/auth/google/callback/
FRONTEND_REDIRECT_URI=http://localhost:8081

# JWT Configuration for Auth Tokens
JWT_SECRET=replace-me-with-32-char-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Razorpay Payment Gateway Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Dev Superuser (local development only)
DEV_SUPERUSER_NAME=devadmin
DEV_SUPERUSER_EMAIL=devadmin@example.com
DEV_SUPERUSER_PASSWORD=changeme
